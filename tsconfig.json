{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "declaration": true,
    "lib": ["es6","esnext"]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "test/*",
    "dist/*",
    "jest.config.ts"
  ]
}
